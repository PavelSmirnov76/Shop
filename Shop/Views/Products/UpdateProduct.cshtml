@model Shop.Models.Product
<div>
    <h2>Изменение</h2>

    <form asp-action="UpdateProduct" asp-controller="Products" asp-route-id="@Model.Id" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label asp-for="Name">Введите имя</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Price">Введите цену</label>
                <input type="text" class="form-control" asp-for="Price" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>