@model Shop.Models.Product

<h2>Добавление игры</h2>

<form asp-action="AddProduct" asp-controller="Products" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Введите имя</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Введите цену</label>
            <input type="text" class="form-control" asp-for="Price" />
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить игру" class="btn btn-outline-dark" />
        </div>
    </div>
</form>