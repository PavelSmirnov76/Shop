@model Shop.Models.ProductInfo

<div>
    <h2>Добавить</h2>

    <form asp-action="AddProductInfo" asp-controller="ProductInfo" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <input type="hidden" asp-for="ProductId" />
            </div>
            <div class="form-group">
                <label asp-for="Hedder">Введите заголовок</label>
                <input type="text" class="form-control" asp-for="Hedder" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Введите описание</label>
                <input type="text" class="form-control" asp-for="Description" />
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить Инфо" class="btn btn-outline-dark" />
            </div>
        </div>
    </form>
</div>